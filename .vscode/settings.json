{
    "[c]": {
        "editor.detectIndentation": false,
        "editor.tabSize": 8,
        "editor.insertSpaces": false,
        "editor.rulers": [80,100]
    },

    "files.associations": {
        "*.cpp": "cpp",
        "*.hpp": "cpp",
        "*.c": "c",
        "*.h": "c",
        "*.inc": "c",
        "*.code": "plaintext"
    },
    "mesonbuild.configureOnOpen": false,

    "clangd.arguments": [
        "--compile-commands-dir=${workspaceFolder}/build",
        "--background-index",
        "--completion-style=detailed",
        "--header-insertion=never",
        "--log=error"
    ],
}